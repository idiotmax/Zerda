<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMenuBackground"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <org.mozilla.focus.widget.EqualDistributeRow
        style="@style/MenuSheetRow"
        android:layout_marginTop="3dp"
        tools:background="#3300FF00">

        <FrameLayout
            android:id="@+id/menu_download"
            style="@style/MenuButtonBox"
            android:onClick="onMenuItemClicked"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_download"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_download"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_history"
            style="@style/MenuButtonBox"
            android:onClick="onMenuItemClicked"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_history"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_history"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_screenshots"
            style="@style/MenuButtonBox"
            android:onClick="onMenuItemClicked"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_screenshots"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_screenshots"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            style="@style/MenuButtonBox"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_speedmode"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_speed_mode"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>

    </org.mozilla.focus.widget.EqualDistributeRow>

    <org.mozilla.focus.widget.EqualDistributeRow
        style="@style/MenuSheetRow"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="1dp"
        tools:background="#3300FF00">

        <FrameLayout
            style="@style/MenuButtonBox"
            android:onClick="onMenuItemClicked"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_blockimg"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_block_image"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            style="@style/MenuButtonBox"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_delete"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_clear_space"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/menu_preferences"
            style="@style/MenuButtonBox"
            android:onClick="onMenuItemClicked"
            tools:background="#33FF0000">

            <LinearLayout
                style="@style/MenuButtonInnerBox"
                tools:background="#55FFFF00">

                <ImageView
                    style="@style/MenuButtonImage"
                    android:src="@drawable/menu_settings"
                    tools:background="#3300FF00" />

                <TextView
                    style="@style/MenuButtonText"
                    android:text="@string/label_menu_settings"
                    tools:background="#330000FF" />

            </LinearLayout>
        </FrameLayout>

        <!-- a placeholder for layout -->
        <FrameLayout
            style="@style/MenuButtonBox"
            tools:background="#33FF0000"></FrameLayout>

    </org.mozilla.focus.widget.EqualDistributeRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMenuDivider" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/action_next"
                style="@style/MenuBottomButton"
                android:layout_marginEnd="57dp"
                android:background="@drawable/round_rectangle_ripple"
                android:contentDescription="@string/content_description_forward"
                android:onClick="onMenuItemClicked"
                android:src="@drawable/action_next"
                tools:background="#330000FF" />

            <ImageButton
                android:id="@+id/action_refresh"
                style="@style/MenuBottomButton"
                android:layout_marginEnd="57dp"
                android:background="@drawable/round_rectangle_ripple"
                android:contentDescription="@string/content_description_back"
                android:onClick="onMenuItemClicked"
                android:src="@drawable/action_refresh"
                tools:background="#330000FF" />

            <ImageButton
                android:id="@+id/action_share"
                style="@style/MenuBottomButton"
                android:layout_marginEnd="57dp"
                android:background="@drawable/round_rectangle_ripple"
                android:contentDescription="@string/content_description_reload"
                android:onClick="onMenuItemClicked"
                android:src="@drawable/menu_share"
                tools:background="#330000FF" />

            <ImageButton
                android:id="@+id/capture_page"
                style="@style/MenuBottomButton"
                android:background="@drawable/round_rectangle_ripple"
                android:onClick="onMenuItemClicked"
                android:src="@drawable/action_capture"
                tools:background="#330000FF" />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>