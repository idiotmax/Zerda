<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixed_menu_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentBottom="true"
    tools:background="#0000FF"
    android:background="@color/privateBackground">

    <org.mozilla.focus.widget.EqualDistributeGrid
        android:id="@+id/browser_screen_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/browser_fixed_menu_horizontal_margin"
        android:layout_marginStart="@dimen/browser_fixed_menu_horizontal_margin">

        <ImageButton
            android:id="@+id/btn_mode"
            style="@style/MainMenuButton"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/private_browsing_mask" />

        <ImageButton
            android:id="@+id/btn_next"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/action_next" />

        <ImageButton
            android:id="@+id/btn_delete"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/menu_delete" />

        <ImageButton
            android:id="@+id/btn_load"
            style="@style/MainMenuButton"
            android:tint="@color/private_menu_button"
            app:srcCompat="@drawable/action_refresh" />

        <FrameLayout
            android:id="@+id/btn_tracker"
            style="@style/MainMenuButton">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btn_tracker_on"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:lottie_fileName="action_trackingprotection-on.json" />

            <ImageButton
                android:id="@+id/btn_tracker_off"
                style="@style/MainMenuButton"
                android:tint="@color/private_menu_button"
                app:srcCompat="@drawable/action_trackingprotection_off"
                android:clickable="false" />
        </FrameLayout>


    </org.mozilla.focus.widget.EqualDistributeGrid>
</FrameLayout>

